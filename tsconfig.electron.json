{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "outDir": "./dist-electron",
    "module": "CommonJS",
    "target": "ES2020",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "noEmit": false,
    "allowImportingTsExtensions": false
  },
  "include": ["electron/**/*"],
  "exclude": ["node_modules", "dist", "src"]
}

